<div id="main-container" class="container">

<div class="row">
      <div class="col-xs-6">

  <h2><%= @blog_post.title %></h2>
  <h3>by <%= @blog_post.author %></h3>
  <%= @blog_post.content %>
</div>
</div>
<br>
<div class="col-xs-3">
<div class="btn-group">
<%= link_to blog_post_index_path, class: 'btn btn-primary' do %>
 <i class="glyphicon glyphicon-menu-left"></i> Back
<% end  %>

<%= link_to edit_blog_post_path(@blog_post), class: 'btn btn-success' do %>
 <i class="glyphicon glyphicon-pencil"></i> Edit
<% end  %>

<%= link_to @blog_post, method: :delete, class: 'btn btn-danger' do %>
 <i class="glyphicon glyphicon-remove"></i> Delete


<% end  %>
</div>
</div>
</div>

