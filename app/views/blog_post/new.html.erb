##<%= form_for @blog_post, url: {action: 'create'} do |f|  %>
<%= form_for @blog_post, html: {class: 'form-horizontal', action: 'create'} do |f| %>


<div class="field form-group">
<%= f.label :title, class: 'col-sm-2 control-label'  %>
<div class="col-sm-8">
<%= f.text_field :title, class: 'form-control'  %>
</div>
</div>
<div class="field form-group">
<%= f.label :author, class: 'col-sm-2 control-label' %>
<div class="col-sm-8">
<%= f.text_field :author, class: 'form-control' %>
</div>
</div>
<div class="field form-group">
<%= f.label :content, class: 'col-sm-2 control-label'  %>
 <div class="col-sm-8">
<%= f.text_area :content, class: 'form-control' %>
<br /><br />
<div class="actions form-group">
<div class="col-sm-10">
<%= f.submit %>

</div>
</div>
<% end %>


<br>

<%= link_to 'Cancel', blog_post_index_path, class: 'btn btn-danger'  %>
</div>
</div>
</div>  